<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bixi_background"
    tools:context="com.bixi.bixi.Views.PasswordActivity">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduzca su Password"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/edtPassPassword"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="29dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:textColor="@color/black"
        android:inputType="numberPassword"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btn1Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:background="@color/tw__transparent"
        android:gravity="end|center"
        app:layout_constraintRight_toLeftOf="@+id/btn2Password"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="@+id/btn2Password"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn2Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:background="@color/tw__transparent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edtPassPassword"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn3Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/btn2Password"
        android:layout_marginLeft="0dp"
        android:gravity="start|center"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@+id/btn2Password"
        android:background="@color/tw__transparent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn4Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:background="@color/tw__transparent"
        app:layout_constraintTop_toTopOf="@+id/btn5Password"
        android:layout_marginTop="0dp"
        android:gravity="end|center"
        app:layout_constraintRight_toLeftOf="@+id/btn5Password"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.578" />

    <Button
        android:id="@+id/btn5Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:background="@color/tw__transparent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn2Password"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.498" />

    <Button
        android:id="@+id/btn6Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:background="@color/tw__transparent"
        android:gravity="start|center"
        app:layout_constraintLeft_toRightOf="@+id/btn5Password"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="@+id/btn5Password"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn7Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="24sp"
        android:gravity="end|center"
        android:textColor="@color/colorAccent"
        android:background="@color/tw__transparent"
        app:layout_constraintRight_toLeftOf="@+id/btn8Password"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/btn8Password"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn8Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:background="@color/tw__transparent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn5Password"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.498" />

    <Button
        android:id="@+id/btn9Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="24sp"
        android:gravity="start|center"
        android:textColor="@color/colorAccent"
        android:background="@color/tw__transparent"
        app:layout_constraintLeft_toRightOf="@+id/btn8Password"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/btn8Password"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnCPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:background="@color/tw__transparent"
        android:gravity="end|center"
        app:layout_constraintRight_toLeftOf="@+id/btn0Password"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/btn0Password"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.568" />

    <Button
        android:id="@+id/btn0Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:background="@color/tw__transparent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn8Password"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <Button
        android:id="@+id/button20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:background="@color/tw__transparent"
        android:gravity="start|center"
        app:layout_constraintTop_toTopOf="@+id/btn0Password"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/btn0Password"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.438" />

    <Button
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Confirmar"
        android:textSize="22sp"
        android:visibility="invisible"
        android:textColor="@color/colorAccent"
        android:background="@color/tw__transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ProgressBar
        android:id="@+id/pbPassword"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button21" />


</android.support.constraint.ConstraintLayout>
