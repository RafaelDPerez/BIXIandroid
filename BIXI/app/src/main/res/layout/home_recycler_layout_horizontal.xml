<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="175dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:id="@+id/home_recycler_id"
    >


    <FrameLayout
        android:layout_width="175dp"
        android:layout_height="125dp"
        >

        <ImageView
            android:id="@+id/ivOferta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/colorAccent"
            android:transitionName="@string/animation_img"/>

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:background="@color/colorAccent"
            android:padding="10dp"
            android:text="Text 1"
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/heart_outline"
            android:layout_gravity="right|top"
            android:id="@+id/imageView2" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/chevron_right"
            android:layout_gravity="right|center"
            android:id="@+id/imageView3" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/chevron_right"
            android:layout_gravity="left|center"
            android:rotation="180"
            android:id="@+id/imageView4" />

        <TextView
            android:id="@+id/tvBixiPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8888"
            android:gravity="center"
            android:padding="4dp"
            android:text="TextView"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center_horizontal|clip_vertical|bottom|start"
            android:visibility="gone"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressBar3"
            android:visibility="invisible"
            style="?android:attr/progressBarStyle"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="175dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitulo"
            android:layout_marginTop="4dp"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="175dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescripcion"
            android:layout_margin="2dp"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>

</LinearLayout>