<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bixi_background"
    tools:context="com.bixi.bixi.Login">


    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/facebook"
        android:id="@+id/imageViewFacebook"
        app:layout_constraintTop_toTopOf="@+id/imageViewGoogle"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewGoogle"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/google"
        android:id="@+id/imageViewGoogle"
        android:layout_marginStart="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/twitter"
        android:id="@+id/imageViewTwitter"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewFacebook"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/imageViewFacebook" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/instagram"
        android:id="@+id/imageViewInstagram"
        app:layout_constraintLeft_toRightOf="@+id/imageViewTwitter"
        app:layout_constraintTop_toTopOf="@+id/imageViewTwitter"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/linkedin"
        android:id="@+id/imageViewLinkedin"
        app:layout_constraintLeft_toRightOf="@+id/imageViewInstagram"
        app:layout_constraintTop_toTopOf="@+id/imageViewInstagram"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.49" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edtEmail"
        android:textColorHint="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:hint="@string/email"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGoogle"
        app:layout_constraintHorizontal_bias="0.33" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtPassword"
        android:hint="@string/contraseÃ±a"
        android:textColor="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail" />

    <ImageView
        app:srcCompat="@drawable/chevron_right"
        android:id="@+id/imgLogin"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="@string/olvidoContrasena"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtContrasena"
        android:layout_marginTop="24dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogin"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:textSize="18sp" />

    <View
        android:layout_width="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/txtContrasena"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintHorizontal_bias="0.56"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:id="@+id/view" />

    <TextView
        android:text="@string/registrate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtRegistrate"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <View
        android:layout_width="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistrate"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintHorizontal_bias="0.56"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
         />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarLogin"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword" />


</android.support.constraint.ConstraintLayout>
