<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.bixi.bixi.Views.DetailActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_detail"
    android:id="@+id/detail_detail_root"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            >

            <ImageView
                android:id="@+id/ivOferta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorAccent"
                android:transitionName="@string/animation_img"/>

            <TextView
                android:id="@+id/tvPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:background="@color/colorAccent"
                android:padding="10dp"
                android:text="Text 1"
                android:visibility="gone"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                app:srcCompat="@drawable/heart_outline"
                android:layout_gravity="right|top"
                android:id="@+id/imageView2" />

            <ImageView
                android:id="@+id/imageViewShare"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="right|top"
                android:layout_marginTop="4dp"
                android:layout_marginRight="48dp"
                app:srcCompat="@drawable/share_variant" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/chevron_right"
                android:layout_gravity="right|center"
                android:id="@+id/imageView3" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/chevron_right"
                android:layout_gravity="left|center"
                android:rotation="180"
                android:id="@+id/imageView4" />

            <TextView
                android:id="@+id/tvBixiPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#99000000"
                android:gravity="center"
                android:padding="4dp"
                android:text="TextView"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center_horizontal|clip_vertical|bottom|start"
                android:visibility="gone"
                android:textStyle="bold"/>

            <ProgressBar
                android:id="@+id/progressBar3"
                android:visibility="invisible"
                style="?android:attr/progressBarStyle"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:textColor="@android:color/black"
                    android:id="@+id/textViewTitulo"
                    android:textStyle="bold"
                    android:textAppearance="@android:style/TextAppearance.Holo.Widget.PopupMenu.Large"
                    android:textSize="24sp" />

                <TextView
                    android:text="Detalle"
                    android:layout_width="match_parent"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewTitulo"
                    android:layout_alignLeft="@+id/textViewTitulo"
                    android:layout_alignStart="@+id/textViewTitulo"
                    android:layout_marginTop="24dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textSize="16sp"
                    android:id="@+id/textViewDetalle" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/purpleBixi"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <Button
                        android:text="@string/reclamarOferta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorAccent"
                        android:paddingLeft="16dp"
                        android:id="@+id/btnReclamarOfertaDetail"
                        android:gravity="center_vertical"
                        android:background="@color/purpleBixi"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        />

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>